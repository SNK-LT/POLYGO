<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="PolyGo.Views.InitialSetup.IsStudentPage">
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Welcome to IsStudentPage!"
				VerticalOptions="CenterAndExpand" 
				HorizontalOptions="CenterAndExpand" />
			<Label Text="You are..." 
						 FontSize="25" 
						 VerticalOptions="CenterAndExpand"/>
			<RadioButton x:Name="rbStudent"
                Content="Student" 
                HorizontalOptions="Center"
                FontSize="22"
               />
			<RadioButton x:Name="rbTeacher"
                Content="Teacher" 
                HorizontalOptions="Center"
                FontSize="22"
                />
			<Button Text="Next" 
							Clicked="OnNextButtonClicked"/>
			<Button Text="I'll do it later" 
							Clicked="OnDoLaterButtonClicked"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>