<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:resources="clr-namespace:PolyGo.Resx"
			 x:Class="PolyGo.Views.InitialSetup.NameAndGroupPage">
	<ContentPage.Content>
		<StackLayout>
            
			<Editor x:Name="ed1"
                    Placeholder="What would you like to be called"
                    HeightRequest="50"/>
            
			<Editor x:Name="ed2"
                    Placeholder="Enter your group number"
                    HeightRequest="50"/>
            
			<Button Text="{x:Static resources:AppResources.FinishSetup}" 
							BackgroundColor="Blue"
							Clicked="OnFinishButtonClicked"/>
            
			<Button Text="{x:Static resources:AppResources.DoLater}" 
							Clicked="OnDoLaterButtonClicked"/>
            
		</StackLayout>
	</ContentPage.Content>
</ContentPage>